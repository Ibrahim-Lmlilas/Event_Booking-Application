FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Install nest CLI globally for hot reload
RUN npm install -g @nestjs/cli

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start in development mode with hot-reload
CMD ["npm", "run", "start:dev"]
