# Application
NODE_ENV=development
PORT=3001

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/event_booking
# For MongoDB Atlas (Production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event_booking?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_PREFIX=api

# File Upload (for PDF tickets)
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads
